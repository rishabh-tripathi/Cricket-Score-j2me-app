<screen title="World Cup 2011">
    <scrollpane>
    <container style="layout:inlinelayout(false,fill);align:center">
        <picture src="titleimg.png"> </picture>
        <textarea>Enter Your Name</textarea>
        <textfield id="name" tooltip="Your Name"></textfield>
        <textarea>Enter Your Comment</textarea>        
        <textfield id="comment" tooltip="Your Comment"></textfield>
        <text> </text>
        <button onAction="add" shortcuts="1">Comment</button>
        <picture src="pwrdby.png"> </picture>
    </container>
    </scrollpane>
<screenFirstMenu onAction="back">Back</screenFirstMenu>
    <screenSecondmenu>
        More
        <menuPopup>
            <menuItem onAction="share">
                Share
            </menuItem>
            <menuItem onAction="feedback">
                Feedback
            </menuItem>
            <menuItem onAction="exitConfirm">
                Exit
            </menuItem>

        </menuPopup>
    </screenSecondmenu>
</screen>