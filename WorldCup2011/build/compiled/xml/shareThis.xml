<screen title="Share with your friends">
    <scrollpane>
    <container style="layout:inlinelayout(false,fill);align:center">
        <picture src="titleimg.png"> </picture>
        <textarea>Recipent Mobile</textarea>
        <textfield id="mnumber" tooltip="Enter Mobile no."></textfield>
        <textarea>Recipent Email(Optional)</textarea>
        <textfield id="memail" tooltip="Enter email address"></textfield>
        <textarea>Enter your message(optional)</textarea>
        <textfield id="mmsg" tooltip="Your message"></textfield>
        <text> </text>
        <button onAction="send" shortcuts="1">Share</button>
        <picture src="pwrdby.png"> </picture>
    </container>
    </scrollpane>
<screenFirstMenu onAction="back">Back</screenFirstMenu>
    <screenSecondmenu>
        More
        <menuPopup>
            <menuItem onAction="feedback">
                Feedback
            </menuItem>
            <menuItem onAction="about">
                About
            </menuItem>
            <menuItem onAction="exitConfirm">
                Exit
            </menuItem>

        </menuPopup>
    </screenSecondmenu>
</screen>