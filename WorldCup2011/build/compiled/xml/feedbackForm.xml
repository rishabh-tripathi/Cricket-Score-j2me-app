<screen title="Feedback">
    <scrollpane>
    <container style="layout:inlinelayout(false,fill);align:center">
        <picture src="titleimg.png"> </picture>
        <textarea>Enter Your Name</textarea>
        <textfield id="fname" tooltip="Your Name"></textfield>
        <textarea>Enter Email</textarea>
        <textfield id="femail" tooltip="Your Email"></textfield>
        <textarea>Enter Your Feedback</textarea>
        <textfield id="fcomment" tooltip="Your Comment about this app"></textfield>
        <text> </text>
        <button onAction="fadd" shortcuts="1">Post</button>
        <picture src="pwrdby.png"> </picture>
    </container>
    </scrollpane>
<screenFirstMenu onAction="back">Back</screenFirstMenu>
    <screenSecondmenu>
        More
        <menuPopup>
            <menuItem onAction="share">
                Share
            </menuItem>
            <menuItem onAction="about">
                About
            </menuItem>
            <menuItem onAction="exitConfirm">
                Exit
            </menuItem>

        </menuPopup>
    </screenSecondmenu>
